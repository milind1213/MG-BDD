{
  "default": {
    "paths": [
      "tests/features/api",
      "tests/features/web"
    ],
    "require": [
      "tests/step-definitions/api-steps/*.js",
      "tests/step-definitions/web-steps/*.js",
      "tests/common-platform-utils/hooks.js"
    ],
    "dryRun":false,
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "format": [
      "html:reports/cucumber-report.html",
      "json:reports/cucumber-report.json",
      "summary"
    ],
    "retry":0,
    "timeout": 60000,
    "parallel":4
  }
}
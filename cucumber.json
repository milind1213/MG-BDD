{
  "default": {
    "paths": [
      "tests/features/api",
      "tests/features/web"
    ],
    "require": [
      "tests/step-definitions/api-steps/*.js",
      "tests/step-definitions/web-steps/*.js",
      "tests/common-platform-utils/hooks.js"
    ],
    "dryRun":false,
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "format": [
      "html:reports/cucumber-report/CucumberReport.html",
      "summary",
      "progress-bar"
    ],
    "retry":3,
    "timeout": 60000,
    "parallel":2
  }
}



